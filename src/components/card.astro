---
const { title, image } = Astro.props;
---

<div class="group flex flex-col items-center">
    <div class="hexagon w-28 h-28 bg-slate-700 shadow-lg relative
                flex items-center justify-center
                transition-transform duration-500 ease-in-out
                group-hover:-translate-y-4 group-hover:rotate-120 group-hover:scale-140 group-hover:bg-emerald-200">
        
        <div class="absolute inset-0 flex items-center justify-center
                    transition-transform duration-500 ease-in-out
                    group-hover:-rotate-120">
        <img src={image} alt={title} class="w-16 h-16 object-contain drop-shadow"
              />
        </div>
    </div>

    <div class="flex flex-col items-center">
        <span class="mt-2 text-white text-center font-semibold">{title}</span>
    <div class="mt-1 w-12 h-0.5 bg-white rounded-full"></div>
</div>

</div>

<style>
.hexagon {
  clip-path: polygon(
    25% 6.7%, 75% 6.7%,
    100% 50%, 75% 93.3%,
    25% 93.3%, 0% 50%
  );
}
</style>
