---
const { title, image, description } = Astro.props;
---

<a href="#" class="flex flex-col bg-white border border-gray-200 rounded-xl shadow-sm hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 h-96 w-full max-w-md overflow-hidden">
  
  {/* Imagen ocupa la mitad superior */}
  <img 
    class="object-cover w-full h-1/2" 
    src={image} 
    alt={title} 
  />

  {/* Texto ocupa la mitad inferior */}
  <div class="flex flex-col justify-center p-4 h-1/2">
    <h5 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{title}</h5>
    <p class="mt-2 text-gray-700 dark:text-gray-400">{description}</p>
  </div>
</a>


