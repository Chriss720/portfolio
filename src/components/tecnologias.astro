---
import "../styles/global.css";
import Card from "../components/card.astro";
---

<div class="bg-slate-800 max-w-6xl mx-auto border rounded-lg border-slate-700 px-4 py-16 flex flex-col gap-16">

  <section>
    <h1 class="text-white text-4xl font-bold mb-12 text-center">
      I have experience in the following technologies:
    </h1>

    <div class="grid grid-cols-3 sm:grid-cols-3 lg:grid-cols-5 justify-items-center gap-10">
        <Card title="Java" image="/icons/java.png" />
        <Card title="Laravel" image="/icons/laravel.png" />
        <Card title="Tailwind CSS" image="/icons/tailwind.png" />
        <Card title="PostgreSQL" image="/icons/psgrest.png" />
        <Card title="JavaScript" image="/icons/js.png" />
        <Card title="HTML" image="/icons/html.png" />
        <Card title="CSS" image="/icons/css.png" />
        <Card title="Git" image="/icons/git.png" />
        <Card title="Supabase" image="/icons/supabase.png" />
        <Card title="Astro" image="/icons/astro.png" />
    </div>
  </section>

<section>
  <div class="relative bg-slate-900 py-10 px-6 overflow-hidden rounded-xl">

    <div class="pointer-events-none absolute left-0 top-0 h-full w-24 bg-gradient-to-r from-slate-900 to-transparent z-10"></div>
    <div class="pointer-events-none absolute right-0 top-0 h-full w-24 bg-gradient-to-l from-slate-900 to-transparent z-10"></div>

    <div class="carousel-container overflow-hidden">
      <div class="carousel-track flex items-center gap-5 animate-scroll">
        <img src="/icons/blend.png" alt="Blend"class="h-16 w-auto object-contain opacity-100 hover:scale-110 transition-transform duration-300" />
        <img src="/icons/krita.png" alt="Krita"class="h-16 w-auto object-contain opacity-100 hover:scale-110 transition-transform duration-300" />
        <img src="/icons/inks.png" alt="Inkscape"class="h-16 w-auto object-contain opacity-100 hover:scale-110 transition-transform duration-300" />
        <img src="/icons/figma.png" alt="Figma"class="h-16 w-auto object-contain opacity-100 hover:scale-110 transition-transform duration-300" />
        <img src="/icons/godot.png" alt="Godot"class="h-16 w-auto object-contain opacity-100 hover:scale-110 transition-transform duration-300" />
        <img src="/icons/ps.png" alt="ps" class="h-16 w-auto object-contain opacity-100 hover:scale-110 transition-transform duration-300" />

        <img src="/icons/blend.png" alt="Blend"class="h-16 w-auto object-contain opacity-100 hover:scale-110 transition-transform duration-300" />
        <img src="/icons/krita.png" alt="Krita"class="h-16 w-auto object-contain opacity-100 hover:scale-110 transition-transform duration-300" />
        <img src="/icons/inks.png" alt="Inkscape"class="h-16 w-auto object-contain opacity-100 hover:scale-110 transition-transform duration-300" />
        <img src="/icons/figma.png" alt="Figma"class="h-16 w-auto object-contain opacity-100 hover:scale-110 transition-transform duration-300" />
        <img src="/icons/godot.png" alt="Godot"class="h-16 w-auto object-contain opacity-100 hover:scale-110 transition-transform duration-300" />
        <img src="/icons/ps.png" alt="ps"class="h-16 w-auto object-contain opacity-100 hover:scale-110 transition-transform duration-300" />
      </div>
    </div>
  </div>
</section>

</div>

<style>
  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-80%); }
  }

  .carousel-container {
    max-width: 100%;
    overflow: hidden;   /* Oculta lo que se sale */
    margin: 0 auto;
  }

  .carousel-track {
    display: flex;
    width: max-content;   /* Se ajusta al contenido duplicado */
    animation: scroll 20s linear infinite;
  }

  /* Ajuste en móvil: animación más lenta */
  @media (max-width: 640px) {
    .carousel-track {
      animation-duration: 10s;
    }
  }
</style>